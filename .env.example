# Solana Network Configuration
# Options: devnet, testnet, mainnet-beta
NEXT_PUBLIC_SOLANA_NETWORK=devnet

# RPC Endpoint Configuration
# Default: Uses clusterApiUrl based on NEXT_PUBLIC_SOLANA_NETWORK
# Custom RPC (recommended for production): Use Alchemy, QuickNode, or Helius
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com

# WebSocket Endpoint for Real-Time Updates
# Required for auto-sync functionality
NEXT_PUBLIC_WS_ENDPOINT=wss://api.devnet.solana.com

# Auto-Sync Configuration
# Interval in milliseconds for polling blockchain data (default: 1000 = 1 second)
NEXT_PUBLIC_SYNC_INTERVAL=1000

# Enable/Disable Auto-Sync
NEXT_PUBLIC_ENABLE_AUTO_SYNC=true

# Program IDs (Update after deploying Solana programs)
# Leave empty for local development
NEXT_PUBLIC_STAKING_PROGRAM_ID=
NEXT_PUBLIC_REWARDS_PROGRAM_ID=
NEXT_PUBLIC_GOVERNANCE_PROGRAM_ID=

# Token Configuration
# FACT token mint address (update after token creation)
NEXT_PUBLIC_TOKEN_MINT_ADDRESS=

# API Configuration (Optional - for backend services)
# NEXT_PUBLIC_API_URL=http://localhost:3001

# Analytics & Monitoring (Optional)
# NEXT_PUBLIC_ANALYTICS_ID=
# NEXT_PUBLIC_SENTRY_DSN=

# Feature Flags (Optional)
# NEXT_PUBLIC_ENABLE_GOVERNANCE=true
# NEXT_PUBLIC_ENABLE_STAKING=true
# NEXT_PUBLIC_ENABLE_REWARDS=true

# Development Settings
# Enable verbose logging in console
NEXT_PUBLIC_DEBUG_MODE=false

# Transaction Configuration
# Maximum transaction confirmation timeout (milliseconds)
NEXT_PUBLIC_TX_TIMEOUT=60000

# Commitment level: processed, confirmed, finalized
NEXT_PUBLIC_COMMITMENT=confirmed

